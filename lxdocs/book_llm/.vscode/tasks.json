{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "LaTeX Build",
        "type": "shell",
        "command": "bash",
        "args": [
          "-c",
          "rm -f *.pdf && latexmk -C && latexmk -pdf -interaction=nonstopmode ${fileBasename} && rm -f *.aux *.bbl *.bcf *.blg *.fdb_latexmk *.fls *.log *.lof *.lot *.out *.run.xml *.toc *.tmp && mv ${fileBasenameNoExtension}.pdf ${workspaceFolder}/zz_pdf "
        ],
        "options": {
          "cwd": "${fileDirname}"
        },
        "presentation": {
          "reveal": "always",
          "panel": "dedicated",
          "clear": true
        },
        "problemMatcher": [],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      },
      {
        "label": "LaTeX Clean",
        "type": "shell",
        "command": "bash",
        "args": [
          "-c",
          "rm -f *.pdf *.aux *.bbl *.bcf *.blg *.fdb_latexmk *.fls *.log *.lof *.lot *.out *.run.xml *.toc *.tmp  ${workspaceFolder}/zz_pdf/${fileBasenameNoExtension}.pdf "
        ],
        "options": {
          "cwd": "${fileDirname}"
        },
        "presentation": {
          "reveal": "always",
          "panel": "dedicated",
          "clear": true
        }
      }
    ]
  }
  